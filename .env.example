NODE_ENV=production
PORT=3000
MCP_PORT=4000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Local Development (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Production (Railway auto-provides this)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Database Options
DB_LOGGING=false
DB_SSL=false

# ===========================================
# AI API KEYS
# ===========================================
# Groq (Required) - Get from: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google Gemini (Optional) - Get from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# DeepSeek (Optional) - Get from: https://platform.deepseek.com
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here

# Mistral AI (Required) - Get from: https://console.mistral.ai
MISTRAL_API_KEY=your_mistral_api_key_here

# ===========================================
# AUTHENTICATION (Optional)
# ===========================================
# JWT Secret (Generate a random 32+ character string)
JWT_SECRET=your_random_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# ===========================================
# CORS CONFIGURATION (Optional)
# ===========================================
# Allow all origins (use * for development)
CORS_ORIGIN=*
# Or specify your frontend URL for production
# CORS_ORIGIN=https://your-frontend.com

# ===========================================
# LOGGING (Optional)
# ===========================================
LOG_LEVEL=info